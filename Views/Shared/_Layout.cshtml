<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Grāmatu veikals</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/MyCss.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/Fontawesome/css/all.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookStore.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noUiSlider/15.7.0/nouislider.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noUiSlider/15.7.0/nouislider.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fs-5" asp-area="" asp-controller="Home" asp-action="Index">Grāmatu veikals</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark fs-6" asp-area="" asp-controller="Store" asp-action="Index">Veikals</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark fs-6" asp-controller="Order" asp-action="OrderHistory">Pasūtījumu vēsture</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark fs-6" asp-area="" asp-controller="Books" asp-action="Index"><strong> | Grāmatu saraksts</strong></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark fs-6" asp-controller="Admin" asp-action="OrderList"><strong>Pasūtījumu saraksts</strong></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark fs-6" asp-controller="Admin" asp-action="UserList"><strong>Lietotāju saraksts</strong></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark fs-6" asp-area="" asp-controller="Admin" asp-action="ListAllRoles"><strong>Tiesības |</strong></a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                    <a class="nav-link text-dark float-end fs-6" asp-area="" asp-controller="Cart" asp-action="Index"><i class="fa-solid fa-cart-shopping"></i></a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Grāmatu veikals
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>