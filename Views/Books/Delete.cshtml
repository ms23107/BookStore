@model BookStore.Models.Book

@{
    ViewData["Title"] = "Izdzēst";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 rounded-lg">
                <div class="card-header bg-danger text-white">
                    <h1 class="mb-0">Izdzēst grāmatu</h1>
                </div>
                <div class="card-body">
                    <h3 class="text-danger">Vai tiešām vēlaties to dzēst?</h3>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-3 text-blue">Nosaukums</dt>
                        <dd class="col-sm-9 text-black">@Html.DisplayFor(model => model.Title)</dd>

                        <dt class="col-sm-3 text-blue">Apraksts</dt>
                        <dd class="col-sm-9 text-black">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-3 text-blue">Valoda</dt>
                        <dd class="col-sm-9 text-black">@Html.DisplayFor(model => model.Language)</dd>

                        <dt class="col-sm-3 text-blue">Žanrs</dt>
                        <dd class="col-sm-9 text-black">@Html.DisplayFor(model => model.Genre)</dd>

                        <dt class="col-sm-3 text-blue">Izdevējs</dt>
                        <dd class="col-sm-9 text-black">@Html.DisplayFor(model => model.Manufacturer)</dd>

                        <dt class="col-sm-3 text-blue">ISBN</dt>
                        <dd class="col-sm-9 text-black">@Html.DisplayFor(model => model.ISBN)</dd>

                        <dt class="col-sm-3 text-blue">Publicēšanas datums</dt>
                        <dd class="col-sm-9 text-black">@Html.DisplayFor(model => model.DatePublished)</dd>

                        <dt class="col-sm-3 text-blue">Cena (€)</dt>
                        <dd class="col-sm-9 text-black">@Model.Price.ToString("C", new System.Globalization.CultureInfo("fr-FR"))</dd>

                        <dt class="col-sm-3 text-blue">Autors</dt>
                        <dd class="col-sm-9 text-black">@Html.DisplayFor(model => model.Author)</dd>

                        <dt class="col-sm-3 text-blue">Attēla URL</dt>
                        <dd class="col-sm-9 text-black">@Html.DisplayFor(model => model.ImageUrl)</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="text-center">
                            <a asp-action="Index" class="btn btn-secondary gradient-button">
                                <i class="fa-solid fa-arrow-left"></i> Atpakaļ uz sarakstu
                            </a>
                            <button type="submit" class="btn btn-danger gradient-button">
                                <i class="fa-solid fa-trash"></i> Dzēst
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .card {
        border-radius: 12px;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }
    .text-blue {
        color: #2575fc;
    }

    .text-black {
        color: #000000;
    }

    .text-danger {
        color: #dc3545;
    }
    .gradient-button {
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        border: none;
        color: white;
        padding: 8px 16px;
        border-radius: 5px;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .gradient-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
    .btn-danger.gradient-button {
        background: linear-gradient(135deg, #dc3545, #c82333);
    }

        .btn-danger.gradient-button:hover {
            background: linear-gradient(135deg, #c82333, #dc3545);
        }
</style>