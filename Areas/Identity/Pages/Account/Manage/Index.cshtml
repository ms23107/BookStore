@page
@model IndexModel
@{
    ViewData["Title"] = "Profils";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Lūdzu, izvēlieties savu ēpastu." disabled />
                <label asp-for="Username" class="form-label">Ēpasts</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" placeholder="Lūdzu, izvēlieties savu vārdu." />
                <label asp-for="Input.FirstName" class="form-label">Vārds</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" placeholder="Lūdzu, izvēlieties savu Uzvārdu." />
                <label asp-for="Input.LastName" class="form-label">Uzvārds</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Address" class="form-control" placeholder="Lūdzu, izvēlieties savu adresi." />
                <label asp-for="Input.Address" class="form-label">Adrese</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ZipCode" class="form-control" placeholder="Lūdzu, izvēlieties savu pasta indeksu." />
                <label asp-for="Input.ZipCode" class="form-label">Pasta indekss</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.City" class="form-control" placeholder="Lūdzu, izvēlieties savu pilsētu." />
                <label asp-for="Input.City" class="form-label">Pilsēta</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Lūdzu, ievadiet savu tālruņa numuru." />
                <label asp-for="Input.PhoneNumber" class="form-label">Telefona numurs</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Saglabāt</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
